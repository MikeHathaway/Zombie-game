    <div class="background">
      <p>Rules</p>
      <ol>1:</ol>
      <ol>2:</ol>
      <ol>3:</ol>
    </div>

    <div class="row background">
      <p>Initalize Conditions</p>
      <form>
        <div class="col-xs-4 red">
          <button onclick="ominousWarning(); startGame(document.getElementById('a').value, document.getElementById('b').value, document.getElementById('c').value, canvas.width, canvas.height);" type="button">Start Game</button>
        </div>
        <div>
          <div class="col-xs-4">
            <input type="number" placeholder="Number of generations" id="a" required>
          </div>
          <div class="col-xs-4">
            <input type="number" placeholder="Number of humans" id="b" required>
          </div>
          <div class="col-xs-4">
            <input type="number" placeholder="Percent starting as Zombies" id="c" required>
          </div>
        </div>
      </form>
    </div>
  </div>

